<mah:MetroWindow x:Class="OpenKHS.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:OpenKHS.Views"
        mc:Ignorable="d"
        Title="About OpenKHS" Height="300" Width="480">

    <StackPanel>
        <TextBlock TextAlignment="Center" Text="{Binding Content}" />
        <TextBlock TextAlignment="Center" Text="{Binding VersionText}" Margin="0,40,0,0" />
    </StackPanel>
    
</mah:MetroWindow>
